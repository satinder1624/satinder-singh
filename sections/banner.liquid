<section class="bannerSection">
  <div class="headerContainer">
    <div class="header">
      <img src="{{ 'logo.png' | asset_url }}" alt="Logo" width="" height="">
      <span class="headerText">Find the ideal gift for your loved ones.</span>
      {% render 'button', button_text: 'Choose gift', button_link: 'www.google.com' %}
    </div>
  </div>
  <div class="bannerImage">
    <img src="{{ 'banner.png' | asset_url }}" alt="Banner" width="" height="">
  </div>
  <div class="bannerTextContainer">
    <div class="bannerTextArea">
      <h1>The Gift Guide</h1>
      <span>
        Discover Joy: Your Ultimate Holidat Gift Destination. Explore our curated selection and find the perfect gifts
        to delight your loved ones this holiday season.
    </span>
      {% render 'button', button_text: 'Shop Now', button_link: 'www.google.com' %}
    </div>
    <div class="bannerTextContainerImage">
      <img src="{{ 'banner.png' | asset_url }}" alt="Banner" width="" height="">
    </div>
  </div>
</section>
